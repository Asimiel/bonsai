<h1>Page does not exits yet. Do you want to create it?</h1>

<% form_tag({:controller => "page", :action => "create"}, :method => :post) do %>
   <%= hidden_field_tag "parent_id", @parent_id %>
   <%= hidden_field_tag "creating_root", @creating_root %>
   <%= hidden_field_tag "sid", @sid %>
  <p>
    <%= label_tag :title %><br />
    <%= text_field_tag "title", :title %>
  </p>
  <p>
    <%= label_tag :body %><br />
    <%= text_area_tag "body", :body %>
  </p>
  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>
<h1>Changes for page: <%= @page.title %></h1>
<% form_tag '?diff' do %>
  <%= submit_tag 'compare selected versions' %>
  <ul>
    <% @page.page_parts_revisions.each do |revision| %>
      <li>
        r<%=  revision.id.to_s %>
        <%= radio_button_tag "first_revision" , revision.id, false %>
        <%= radio_button_tag "second_revision" , revision.id, false %>
        <%= revision.created_at.to_time.strftime("%H:%M, %d %b %Y") %>,
        <%=h revision.user.username %> edited <%= revision.page_part.name %>,
        (<%=h revision.summary %>),
        <%=  link_to "Revert to this revision", @page.get_path + "?undo&page_part=" + revision.page_part.id.to_s + "&revision=" + revision.id.to_s %>
      </li>
    <% end %>
  </ul>
  <%= submit_tag 'compare selected versions' %>
<% end %>

